<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <TextView
            android:id="@+id/nametext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="사진추가하기"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.135" />


    <Button
            android:id="@+id/bt_camera"
            android:layout_width="52dp"
            android:layout_height="61dp"
            android:layout_gravity="center"
            android:foreground="@android:drawable/ic_menu_camera"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bt_gallery"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.21" />

    <Button
            android:id="@+id/bt_gallery"
            android:layout_width="52dp"
            android:layout_height="61dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="24dp"
            android:foreground="@android:drawable/ic_menu_gallery"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/recyclerView_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.952"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.216" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_photo"
            android:layout_width="361dp"
            android:layout_height="480dp"
            android:layout_marginTop="232dp"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"></androidx.recyclerview.widget.RecyclerView>


</androidx.constraintlayout.widget.ConstraintLayout>