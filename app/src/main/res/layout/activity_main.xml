<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background1"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_title"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="제목을 입력하세요" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#553B12"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintEnd_toStartOf="@+id/bt_Search" android:layout_marginEnd="13dp"  android:layout_marginRight="13dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toLeftOf="@id/bt_Search"/>

    <Button
            android:id="@+id/bt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Login"
            android:background="@drawable/button1"
            android:textColor="#553B12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    <TextView
            android:text="오늘 몇권"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="29dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/edit_title"
            android:textSize="24sp" android:textColor="#553B12" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    <Button
            android:id="@+id/bt_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="17dp"
            android:text="map"
            android:textColor="#553B12"
            android:background="@drawable/button1"
            app:layout_constraintBaseline_toBaselineOf="@+id/bt_mylib"
            app:layout_constraintEnd_toEndOf="parent" />

    <Button
            android:id="@+id/bt_mylib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="17dp"
            android:text="MyLib"
            android:background="@drawable/button1"
            android:textColor="#553B12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bt_friendlib" />

    <Button
            android:id="@+id/bt_friendlib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="108dp"
            android:layout_marginEnd="110dp"
            android:text="Friends"
            android:background="@drawable/button1"
            android:textColor="#553B12"
            app:layout_constraintBaseline_toBaselineOf="@+id/bt_mylib"
            app:layout_constraintEnd_toStartOf="@+id/bt_map"
            app:layout_constraintStart_toStartOf="parent" />

    <Button
            android:id="@+id/bt_Search"
            android:layout_width="47dp"
            android:layout_height="42dp"
            android:width="3dp"
            android:background="#553B12"
            android:foreground="@android:drawable/ic_menu_search"
            android:textColor="#FDFCFA"
            android:textSize="8sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/edit_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/edit_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.495" />

    <ImageButton
            android:id="@+id/bt_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="#673AB7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@android:drawable/sym_def_app_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>