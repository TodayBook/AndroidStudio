<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              app:layout_constraintBottom_toTopOf="parent"
              app:layout_constraintTop_toBottomOf="parent">

    <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="나의 도서관"
            android:textSize="30sp"/>
    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="10dp"
            android:text="읽은 책" android:textSize="24sp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_readbook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
    </androidx.recyclerview.widget.RecyclerView>
    <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginLeft="20dp"
            android:text="읽을 책" android:textSize="24sp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_willbook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" android:padding="10dp">
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>